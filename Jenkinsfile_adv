pipeline {
   agent any

   stages {
      stage($All) {
          steps {
          echo  'Reading C++ code'
          sh 'cat c.txt'
          echo 'Reading Python code'
          sh 'cat python.txt'
           echo 'Reading Bash code'
           sh 'cat bash.txt'
            
         }
      }
	  stage($C) {
            steps {
             echo  'Reading C++ code'
             sh 'cat c.txt'
         }
      }
	  stage($Bash) {
            steps {
             echo  'Reading Bash code'
             sh 'cat bash.txt'
         }
      }
          stage($Python) {
          steps {
             echo  'Reading Python code'
             sh 'cat python.txt'
         }
      }
   }
}
