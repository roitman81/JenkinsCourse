pipeline {
   agent any
   stages {
       stage('Cleanup') {
        steps {
             deleteDir()
         }
     }
      stage('All') {
         if (${LANGUAGE} == 'All') {
          steps {
                echo 'Hello from all languages'
                echo  'Reading C++ code'
                sh 'cat c.txt'
                echo 'Reading Python code'
                sh 'cat python.txt'
                echo 'Reading Bash code'
                sh 'cat bash.txt'
	            }            
            }
       }
	  stage('C') {
	    if (${LANGUAGE} == 'C') {
            steps {
	        echo 'Hello from C language'
                echo  'Reading C++ code'
                sh 'cat c.txt'              
	        }        
        }
    }
	  stage('Bash') {
	  if (${LANGUAGE} == 'Bash') {
            steps {
	        echo 'Hello from Bash language'
                echo  'Reading Bash code'
                sh 'cat bash.txt'
	    }
        }
    }
         stage('Python') {
	  if (${LANGUAGE} == 'Python') {
            steps {
	        echo 'Hello from Python language'
                echo  'Reading Python code'
                sh 'cat python.txt'   
           }
	 }
    } 
  }
}
