pipeline {
   agent any
      env {
      LANGUAGE = $LANGUAGE
    }
   stages {
      stage('All') {
          steps {
          echo  'Reading C++ code'
          sh 'cat c.txt'
          echo 'Reading Python code'
          sh 'cat python.txt'
           echo 'Reading Bash code'
           sh 'cat bash.txt'
            
         }
      }
	  stage('c') {
            steps {
             echo  'Reading C++ code'
             sh 'cat c.txt'
         }
      }
	  stage('bash') {
            steps {
             echo  'Reading Bash code'
             sh 'cat bash.txt'
         }
      }
          stage('python') {
          steps {
             echo  'Reading Python code'
             sh 'cat python.txt'
         }
      }
   }
}
